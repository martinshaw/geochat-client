<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regist_welcomeinfo_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"

    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/regist_welcomeinfo_3_logo"
        android:layout_marginBottom="19dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/regist_welcomeinfo_cat"
        android:contentDescription="@string/geochat_logo"/>

    <TextView
        android:id="@+id/regist_welcomeinfo_3_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/hind_light"
        android:gravity="center"
        android:text="Feature #2"
        android:textAlignment="center"
        android:textColor="@color/md_grey_800"
        android:textSize="20pt"
        />
    <TextView
        android:id="@+id/regist_welcomeinfo_3_paragraph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/hind"
        android:gravity="center"
        android:text="This is a test paragraph which will accompany this feature introduction page. Here the user will be introduced to one of the applications attractive features before they have chosen to create an account or sign in."
        android:textAlignment="center"
        android:textColor="@color/md_black_1000"
        android:textSize="7pt"
        android:lineSpacingExtra="-5dp"
        />

</LinearLayout>