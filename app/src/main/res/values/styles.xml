<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorPrimaryDark">@color/md_grey_400</item>
        <item name="colorAccent">@color/geochatAccent</item>
        <item name="android:windowBackground">@color/md_grey_100</item>
        <item name="android:fontFamily">@font/hind</item>

    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

    <style name="RegistrationTextField" parent="Base.Widget.AppCompat.EditText">
        <item name="android:colorAccent">@color/md_black_1000</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
